<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="269.0" spacing="3" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.greenfox.memorycardgame.gui.MemoryGameController">
   <children>
      <Label prefHeight="27.0" prefWidth="129.0" text="MEMORY GAME" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
    </children>
    <children>

      <HBox alignment="CENTER" prefHeight="113.0" prefWidth="224.0" styleClass="label-bright" stylesheets="@DarkTheme.css">
          <children>
            <Slider fx:id="playerNumberSlider" blockIncrement="1.0" majorTickUnit="1.0" max="4.0" min="1.0" minorTickCount="0" prefHeight="60.0" prefWidth="140.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="label-bright" stylesheets="@DarkTheme.css" value="1.0">
               <effect>
                  <ColorAdjust brightness="0.62" />
               </effect></Slider>
         </children>
      </HBox>
       <HBox alignment="CENTER" prefHeight="38.0" prefWidth="191.0" styleClass="background">

           <children>
              <Slider fx:id="gameLevelSlider" prefHeight="38.0" prefWidth="157.0" styleClass="label-bright" stylesheets="@DarkTheme.css">
                  <min>4</min>
                  <max>8</max>
                  <value>6</value>
                  <majorTickUnit>2</majorTickUnit>
      
                  <minorTickCount>0</minorTickCount>
                  <blockIncrement>2</blockIncrement>
                  <showTickMarks>true</showTickMarks>
                  <showTickLabels>true</showTickLabels>
                  <snapToTicks>true</snapToTicks>
                  <minWidth>157.0</minWidth>
               <effect>
                  <ColorAdjust brightness="0.6" />
               </effect>
              </Slider>
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="10">
           <padding>
   
               <Insets>
                   <bottom>5</bottom>
                   <top>25</top>
                   <left>5</left>
                   <right>5</right>
               </Insets>
   
           </padding>
          <children>
              <Button fx:id="restartGameButton" defaultButton="true" styleClass="button" text="new game" textAlignment="JUSTIFY" />
              <Button fx:id="chooseRootDirButton" styleClass="label-bright" text="choose your pics" textAlignment="JUSTIFY" textOverrun="CENTER_ELLIPSIS" wrapText="true" />
          </children>
       </HBox>
   
   
   
       <GridPane fx:id="memoryCardGrid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
        </GridPane>
       <!--<GridPane fx:id="playerCountersGrid" alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">-->

       <!--</GridPane>-->
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
          <children>
              <Label fx:id="score1" text="0" textFill="WHITE">
                  <graphic>
                      <Label fx:id="score1l" text="P1: " textFill="WHITE" />
                  </graphic>
                  <HBox.margin>
                      <Insets left="20.0" right="20.0" />
                  </HBox.margin>
              </Label>
              <Label fx:id="score2" text="0" textFill="WHITE">
                  <graphic>
                      <Label fx:id="score2l" text="P2: " textFill="WHITE" />
                  </graphic>
                  <HBox.margin>
                      <Insets left="20.0" right="20.0" />
                  </HBox.margin>
              </Label>
              <Label fx:id="score3" text="0" textFill="WHITE">
                  <graphic>
                      <Label fx:id="score3l" text="P3: " textFill="WHITE" />
                  </graphic>
                  <HBox.margin>
                      <Insets left="20.0" right="20.0" />
                  </HBox.margin>
              </Label>
              <Label fx:id="score4" text="0" textFill="WHITE">
                  <graphic>
                      <Label fx:id="score4l" text="P4: " textFill="WHITE" />
                  </graphic>
                  <HBox.margin>
                      <Insets left="20.0" right="20.0" />
                  </HBox.margin>
              </Label>
          </children>
      </HBox>

   </children>
</VBox>
